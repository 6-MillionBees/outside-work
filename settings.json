
{
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        ".",
        "-p",
        "*test.py"
    ],
    "editor.semanticHighlighting.enabled": true,
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#ffa95947",
        "editor.selectionForeground": "#ffffff",
        "editorGroup.dropBackground": "#4665806e",
        "foreground": "#e6e6e6",
        "editorWhitespace.foreground": "#4d4131",
        "activityBar.activeBackground": "#8b5b38",
        "activityBar.activeBorder": "#ffffff",
        "tab.activeBackground": "#1e1e1e",
        "editorCursor.foreground": "#ff9436"
    },

    "editor.tokenColorCustomizations": {
        "[Monokai Dimmed]": {
            "comments": "#8a8a8a",
            "numbers": "#b762a9",
            "strings": "#70bc70",
            "functions": "#e9ba72",
            "keywords": "#dc6537",
            "types": "#e9724d",
        },
    },

    "editor.semanticTokenColorCustomizations": {
        "[Monokai Dimmed]": {
            "enabled": true,
            "rules": {
                "method": "#e9ba72",
                "module": "#ff5757",
                "variable": "#a1b6d2",
                "builtinConstant": "#be31b2",
                "class": "#e6c449",
            }
        }
    }
}
